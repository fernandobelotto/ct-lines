{
  "name": "ct-lines",
  "version": "1.0.0",
  "description": "A command-line tool for counting lines of code, comments, and blank lines in files within a directory.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ct-lines": "./dist/index.js"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --minify",
    "build:watch": "bun build ./src/index.ts --outdir ./dist --target bun --watch",
    "build:executable": "bun build ./src/index.ts --compile --outfile ct-lines",
    "dev": "bun --watch src/index.ts",
    "start": "bun dist/index.js",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@eslint/js": "^9.25.0",
    "chalk": "5.4.1",
    "commander": "^11.1.0",
    "eslint": "^9.25.0",
    "fast-glob": "^3.3.3",
    "inquirer": "^12.5.2",
    "minimatch": "^9.0.5",
    "progress": "^2.0.3",
    "tiktoken": "^1.0.20",
    "typescript-eslint": "^8.30.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.17.30",
    "@types/progress": "^2.0.7",
    "bun-types": "latest",
    "typescript": "^5.8.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
